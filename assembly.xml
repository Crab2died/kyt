<assembly>
    <id>package</id>
    <formats>
        <!--打包成文件夹-->
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
     	<!--拷贝生成的jar包-->
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>kyt-0.0.1-SNAPSHOT.jar</include>
            </includes>
        </fileSet>
        <!--拷贝启动文件-->
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>src/main/resources/misc</directory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
         <!--拷贝webapp-->
        <fileSet>
            <directory>src/main/webapp</directory>
            <outputDirectory>webapp</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <!-- 拷贝jre -->
        <fileSet>
            <directory>src/main/jre1.7.0_79</directory>
            <outputDirectory>jre</outputDirectory>
        </fileSet>
    </fileSets>
    <!--将依赖生成到lib目录下-->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>